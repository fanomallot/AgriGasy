

<!-- affichage allert -->
<% if flash[:success] %>
  <div class="alert alert-success" style="text-align: center;"><%= flash[:success]%></div>
<% else  %>
  <%if flash[:danger]%>
    <div class="alert alert-danger" style="text-align: center;"><%= flash[:danger]%></div>
  <% end %>
<% end %>

<h1>Edit Publication :</h1>

<p>
	<%= form_tag url_for(action: 'update'), method: "put" do %>

  	Nom de produit<br/>
    <input type="text" name="nom" value="<%=@vente.produit.name %>">*<br/> 

    Description<br/>
    <input type="text" name="description" value="<%=@vente.description %>">*<br/> 

    Quantité disponible<br/>
    <input type="text" name="quantite" value="<%=@vente.quantite%>">*</br>

    Prix en ariary/unité<br/>
    <input type="text" name="prix" value="<%=@vente.prix%>">*<br/>
    Date de disponibilité<br/>
    <input type="date" name="date" value="<%=@vente.date.to_date%>" min= <%=Time.now%>>*<br/>
    Region<br>
    <input type="text" name="place" value="<%=@vente.region.place%>">*<br/>
    Lieu<br/>
    <input type="text" name="lieu" value="<%=@vente.lieu%>">*<br/>
    <%= submit_tag "Update post" %>

  <% end %>
  <h4><em><%= link_to "Back", :back %></em></h4>
  <h4><em><%= link_to "Home", root_path %></em></h4>
</p>
