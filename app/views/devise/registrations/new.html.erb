
<div class="ground editachatground blanche">
<div class="grid-con">
  <div class="grid-it">
<div id="slider">
    <figure>
      <%= image_tag("01.jpg")%>
      <%= image_tag("02.jpg")%>
      <%= image_tag("03.jpg")%>
      <%= image_tag("04.jpg")%>
      <%= image_tag("05.jpg")%>
    </figure>
  </div>
</div>
<div class="grid-it">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %><br>

    <%= image_tag('000.jpg', class: "avatar")%><br>

    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", type:"text", placeholder:"First Name", required: true %><br>

    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", type:"text", placeholder:"Last Name" %><br>

    <%= f.label :age %><br />
    <%= f.text_field :age, autofocus: true, autocomplete: "age", type:"text", placeholder:"Age" %><br>

    <%= f.label :ville %><br />
    <%= f.text_field :ville, autofocus: true, autocomplete: "ville",type:"text", placeholder:"City", required: true %><br>

    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true, autocomplete: "description" %><br>

    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,type:"text", placeholder:"Your Email", required: true%><br>

    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",type:"password", placeholder:"Password", required: true %><br>

     <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",type:"password", placeholder:"Confirme Password", required: true %><br>    

    <button type="submit" class="btn-sig">Sign-in</button>

  <% end %>

  <%= render "devise/shared/links" %>

</div>    
</div>
</div>