<div class="ground editachatground blanche">
<h1>Voici le besoin de cette personne</h1>

<h3>Photo du produit qu'on a besoin</h3>
<%if @achat.avatarachat.attached?%>
  <%= image_tag @achat.avatarachat, alt: 'photo_achat',style: "max-height:200px; width: 240px;" %>
<%else%>
  <p>=== Il n'y a pas encore de photo lié à cette publication ===</p>
<%end%>
<%if current_user == @achat.user || current_user.is_admin%>
<h3>Changer de photo ?</h3>
<%= form_tag achat_avatarachats_path(@achat), multipart: true do %>
  <%= file_field_tag :avatarachat %>
  <%= submit_tag "mettre à jour" %>
<% end %>
<%end%>
<p>
	<strong>Nom : </strong> <%= @achat.produit.name %><br/>
	<strong>Description : </strong> <%= @achat.description %><br/>
	<strong>Quantite : </strong> <%= @achat.quantite %><br/>
	<%if @achat.prix != "" %>
	<strong>Prix : </strong> <%= @achat.prix %><br/>
	<%end%>
	<strong>Region : </strong> <%= @achat.region.place %><br/>
	<%if @achat.lieu != "" %>
	<strong>Lieu : </strong> <%= @achat.lieu %><br/>
	<%end%>

	<%if @achat.date != nil %>
	<strong>Date : </strong> <%= @achat.date.to_date %><br/>
	<%end%>
</p>
<%if @achat.user == current_user || current_user.is_admin%>
	<p>
		<%= link_to "Editer", edit_achat_path(@achat.id) %><br/>
		<%= link_to "Effacer", achat_path(@achat.id), method: 'delete', data: {confirm: 'supprimé?'} %>
	</p>
<%end%>
<%if @achat.user != current_user || current_user.is_admin %>			
	<%= form_tag user_achat_messagepriveachats_path(current_user.id,@achat.id),method:'get' do %>
	 	
	 	  <%= submit_tag "envoyer message" %> 
	  	  
	<% end %>
<%end%>	
</div>
