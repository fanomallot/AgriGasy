<div class="ground editachatground">
<!-- affichage allert -->
    <% if flash[:success] %>
    <div class="alert alert-success" style="text-align: center;"><%= flash[:success]%></div>
    <% else  %>
      <%if flash[:danger]%>
    <div class="alert alert-danger" style="text-align: center;"><%= flash[:danger]%></div>
    <% end %>
    <% end %>
	<h1>Cette personne a besoin de <%= @achat.produit.name %></h1>
	<div class="container">
		<h3>Photo du produit qu'on a besoin</h3>
		<%if @achat.avatarachat.attached?%>
		  <%= image_tag @achat.avatarachat, alt: 'photo_achat',style: "max-height:200px; width: 240px;" %>
		<%else%>
		  <p>=== Il n'y a pas encore de photo lié à cette publication ===</p>
		<%end%>
		<%if current_user == @achat.user || current_user.is_admin%>
		<h3>Changer de photo ?</h3>
		<%= form_tag achat_avatarachats_path(@achat), multipart: true do %>
		  <%= file_field_tag :avatarachat %>
		  <%= submit_tag "mettre à jour" %>
		<% end %>
		<%end%>
		<p>
			<strong>Nom du produit: </strong> <%= @achat.produit.name %><br/>
			<strong>Description : </strong> <%= @achat.description %><br/>
			<strong>Quantite : </strong> <%= @achat.quantite %><br/>
			<%if @achat.prix != "" %>
			<strong>Prix : </strong> <%= @achat.prix %><br/>
			<%end%>
			<strong>Region : </strong> <%= @achat.region.place %><br/>
			<%if @achat.lieu != "" %>
			<strong>Lieu : </strong> <%= @achat.lieu %><br>
			<%end%>

			<%if @achat.date != nil %>
			<strong>Date : </strong> <%= @achat.date.to_date %><br>
			<%end%>
			
		</p>
		<%if @achat.user == current_user || current_user.is_admin%>
				<%= link_to "Editer", edit_achat_path(@achat.id), class:'btn btn-secondary' %><br><br>
				<%= link_to "Supprimer", achat_path(@achat.id), method: 'delete', data: {confirm: 'Etes-vous sûr ?'}, class:'btn btn-danger' %><br><br>
		<%end%>

		<% if user_signed_in? %>
			<%if (SignalAchat.find_by(user: current_user, achat_id: @achat.id)== nil)%>
				<a class="overlay-content" href="<%=user_achat_signal_achats_path(current_user.id,@achat.id)%>" data-method= 'post'>
					<h3 class="mb-0"><i class="fa fa-user rouge"></i> Signaler</h3><br><br>
				</a>
	    <%else%>
				<a class="overlay-content" href="<%=user_achat_signal_achats_path(current_user.id,@achat.id)%>" data-method= 'post'>
					<h3 class="mb-0"><i class="fa fa-user rouge"></i> Ne pas signaler</h3>
				</a>
	    <%end%>
	    <% if current_user.is_admin %>
	      <%if @achat.signal_achats.length != 0%>
	        <%=link_to "(#{@achat.signal_achats.length})", user_achat_signal_achats_path(current_user.id, @achat.id)%><br><br>
	      <%end%>
	    <%else%>
	      <%if @achat.signal_achats.length != 0%>
	        <%=@achat.signal_achats.length%><br><br>
	      <%end%>
	    <%end%>
	  <%end%>

		<% if current_user.is_admin %>
			<% if @achat.is_authenticate != true %>
				<%= link_to "Authentifier la publication", "/admindashboard/authentificate_achat/#{@achat.id}", class:'btn btn-primary'  %><br><br>
			<% end %>
		<% end %>
		<%if current_user != @achat.user%> 
			<%if @achat.user != current_user || current_user.is_admin %>			
				<%= form_tag new_user_message_prife_path(@achat.user.id) ,action: 'new',method:'get' do %>
				 	  <%= submit_tag "Envoyer message" %> <br><br>
				<% end %>
			<%end%>
		<%end%>
</div>
