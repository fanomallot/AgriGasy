<div class="ground editachatground blanche">
<!-- affichage allert -->
<% if flash[:success] %>
	<div class="alert alert-success" style="text-align: center;"><%= flash[:success]%></div>
<% else  %>
  	<%if flash[:danger]%>
		<div class="alert alert-danger" style="text-align: center;"><%= flash[:danger]%></div>
	<% end %>
<% end %>

<h2>Voici la liste de toutes les publications dans la région <%=@region.place%></h2>
<%if @region.ventes.length == 0%>
	<h4>Aucune publication de vente dans cette region <%=@region.place%> </h4>
	</br>
<%else%>
	<h4>Liste des ventes dans cette region :</h4>
	<%@region.ventes.each do |vente|%>
	  <i>Nom du produit : </i><%= vente.produit.name %> </br>
	  <i>Quantité du produit : </i><%=vente.quantite%></br>
	  <%= link_to "Detail", vente_path(vente.id) %><br/><br/>
	<%end%>
<%end%>
<%if @region.achats.length == 0%>
	<h4>Aucune publication de besoin dans cette region <%=@region.place%> </h4>
	</br>
<%else%>
	<h4>Liste des besoins dans cette region :</h4>
	<%@region.achats.each do |achat|%>
	  <i>Nom du produit : </i><%= achat.produit.name %></br>
	  <i>Quantité du produit : </i><%=achat.quantite%></br>
	  <%= link_to "Detail", achat_path(achat.id) %><br/><br/>
	<%end%>
<%end%>
<%if current_user.is_admin%>
	<%=link_to 'supprimer cette region',region_path, class:'btn btn-danger',method: 'delete',data:{confirm: "Etes-vous sûre de vouloir supprimer cette region?"}  %>
<%end%>
</div>

