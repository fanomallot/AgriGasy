<h1><%=@region.place%></h1>
 </br>
<%if @region.ventes.length == 0%>
	<h4>Aucune publication de vente dans cette region </h4>
	</br>
<%else%>
	<h4>Liste des ventes dans cette region :</h4>
	<%@region.ventes.each do |vente|%>
	  <%=link_to vente.produit.name, vente_path(vente.id)%> 
	  </br>
	  <%=vente.quantite%></br>
	<%end%>
<%end%>
<%if @region.achats.length == 0%>
	<h4>Aucune publication d'achat dans cette region </h4>
	</br>
<%else%>
	<h4>Liste des achats dans cette region :</h4>
	<%@region.achats.each do |achat|%>
	  <%=link_to achat.produit.name, achat_path(achat.id)%>
	  </br>
	  <%=achat.quantite%></br>
	<%end%>
<%end%>
<%if current_user.is_admin%>
	<%=link_to 'supprimer la region',region_path,method: 'delete',data:{confirm: "Etes-vous sÃ»re de vouloir supprimer cette region?"}  %>
<%end%>

